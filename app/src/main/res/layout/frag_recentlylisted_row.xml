<android.support.v7.widget.CardView android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="127dp"

    app:cardCornerRadius="0dp"
android:layout_marginLeft="3sp"
    android:layout_marginRight="3sp"

    android:background="#F5F5F5"
    card_view:cardBackgroundColor="#000"
    app:cardElevation="2sp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:background="#FFFFFF"

        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageviewlinear"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="115sp"
                android:scaleType="fitXY"
                android:layout_height="111sp"
                android:src="@drawable/garden"
                android:layout_alignParentLeft="true"
               android:layout_margin="5dp"

                 />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageviewlinear"
            android:text="Title"
            android:maxLines="1"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="16sp" />
        <!--<RatingBar-->
            <!--android:id="@+id/rate"-->
            <!--android:layout_toRightOf="@+id/imageView"-->
            <!--android:layout_below="@+id/title"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/linercontact"
            android:gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/imageviewlinear"
            android:orientation="horizontal"
        android:weightSum="2"
            >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1.00">
            <TextView
                android:id="@+id/architecture"
                android:background="@null"
                android:drawableLeft="@drawable/category_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="10dp"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1.00">
                <TextView
                    android:id="@+id/location"
                    android:background="@null"
                    android:drawableLeft="@drawable/locimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/linercontact1a"
            android:gravity="center"
            android:layout_below="@+id/linercontact"
            android:layout_toRightOf="@+id/imageviewlinear"
            android:orientation="horizontal"
            android:weightSum="2"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1.50">


            <TextView
                android:id="@+id/link"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_link"
                android:drawablePadding="4dp"/>
</LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/li_phn"
            android:gravity="center_vertical"
            android:layout_weight="0.5">
            <!--<TextView-->
                <!--android:id="@+id/phno"-->
                <!--android:layout_width="wrap_content"-->

                <!--android:layout_weight="1"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textColor="@color/black"-->
                <!--android:textSize="0sp"-->
                <!--android:autoLink="phone"-->
                <!--android:linksClickable="true"-->
                <!--android:drawablePadding="2dp"-->
                <!--android:drawableLeft="@drawable/phnicon"/>-->
            <ImageView
                android:id="@+id/img_phno"
                android:layout_width="wrap_content"
                android:src="@drawable/phnicon"
                android:layout_height="wrap_content"
                />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/description"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_below="@+id/linercontact1a"
            android:layout_toRightOf="@+id/imageviewlinear"
            android:maxLines="3"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jnsl;a    lnsda   sjds ij kjd;f dff d fjdkjfsjdfsdk yuugruweyrrohr hoieuthe rhuiert uheire iiouotueroite urut"
            android:layout_marginTop="1dp"/>


        <!--<ImageView-->
            <!--android:id="@+id/overflowbusiness"-->
            <!--android:layout_width="@dimen/ic_album_overflow_width"-->
            <!--android:layout_height="@dimen/ic_album_overflow_height"-->
            <!--android:background="@drawable/ic_dots"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentBottom="true"-->

            <!--android:scaleType="centerCrop"-->
            <!--/>-->

    </RelativeLayout>

</android.support.v7.widget.CardView>