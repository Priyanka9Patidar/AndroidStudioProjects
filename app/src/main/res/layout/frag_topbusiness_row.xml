<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/recentlycardView"
    android:layout_width="match_parent"
    android:layout_height="120dp"

    android:layout_marginRight="3sp"
    android:layout_marginLeft="3sp"
    app:cardCornerRadius="0dp"
android:background="#F5F5F5"
    card_view:cardBackgroundColor="#000"
    app:cardElevation="2sp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
    >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageviewlinear2"
            android:orientation="horizontal"
           >

    <ImageView
        android:id="@+id/recentlyimageView"
        android:layout_width="100dp"
        android:scaleType="fitXY"

        android:layout_height="105dp"
       android:layout_alignParentLeft="true"
        android:layout_margin="5sp"
        android:src="@drawable/garden"

        android:layout_alignParentTop="true"
       />
        </LinearLayout>
        <RatingBar
            android:id="@+id/recentlyrating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:transformPivotX="0dp"
            android:layout_toRightOf="@+id/imageviewlinear2"
            android:layout_below="@+id/recentlyliner"
            />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/recentlyliner"
        android:layout_toRightOf="@+id/imageviewlinear2"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/recentlytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageviewlinear2"
            android:text="Title"
            android:maxLines="1"

            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/recentlycity"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:maxLines="1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/recentlyrating"
            android:text="City" />


    </LinearLayout>

</RelativeLayout>

</android.support.v7.widget.CardView>