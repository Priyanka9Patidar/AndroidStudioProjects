<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        app:cardCornerRadius="0sp"

        card_view:cardBackgroundColor="#000"
        app:cardElevation="2sp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10sp"
    tools:context="com.example.user.gridviewusingcard.MainActivity">


<me.biubiubiu.justifytext.library.JustifyTextView
    android:id="@+id/about_text"
    android:layout_marginTop="10dp"
    android:textSize="15dp"
    android:layout_marginLeft="20dp"
    android:elevation="4sp"
    android:layout_alignParentRight="true"
    android:gravity="start"
    android:text="@string/aboutus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="20dp"
        android:id="@+id/phnlinear"
        android:layout_below="@+id/about_text">
    <TextView
        android:text="Phone : "
        android:textSize="15dp"
        android:elevation="4sp"
        android:textColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:text="+91 731 4040407"
            android:id="@+id/text_phno"
            android:textSize="15dp"
            android:elevation="4sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/maillinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/phnlinear">
    <TextView
        android:text="Mail : "
        android:elevation="4sp"
        android:textSize="15dp"
        android:textColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:text="info@molomart.com"
            android:id="@+id/text_mail"
            android:elevation="4sp"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/maillinear"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50sp"
            android:id="@+id/fb"
            android:background="@drawable/ic_fb"
            android:layout_marginLeft="20sp"
            android:layout_height="50dp" />

        <ImageView
            android:layout_width="50sp"
            android:id="@+id/twitter"
            android:layout_marginLeft="30sp"
            android:background="@drawable/ic_twittr"
            android:layout_height="50dp" />
        <ImageView
            android:layout_width="50sp"
            android:id="@+id/google"
            android:layout_marginLeft="30sp"
            android:background="@drawable/ic_googlepls"
            android:layout_height="50dp" />
        <ImageView
            android:layout_width="50sp"
            android:id="@+id/linked"
            android:layout_marginLeft="30sp"
            android:background="@drawable/ic_linkedin"
            android:layout_height="50dp" />

        <ImageView
            android:layout_width="50sp"
            android:id="@+id/pintras"
            android:layout_marginLeft="30sp"
            android:background="@drawable/ic_pintrst"
            android:layout_height="50dp"
            android:layout_marginRight="30sp"/>
    </LinearLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>
</ScrollView>