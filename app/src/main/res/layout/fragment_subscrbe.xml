<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:scrollbars="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:background="@color/white"
        android:layout_marginTop="5sp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basic Info"
        android:layout_marginTop="3sp"
        android:layout_marginRight="3sp"
        android:textColor="@color/blue"
        android:layout_marginLeft="3sp"
        android:textSize="15sp"/>
    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/subscribe_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Category"
        android:textSize="12sp"

        android:layout_marginLeft="9sp"
        android:layout_marginRight="3sp"

        android:textColorHint="#05ab9a"
        app:met_floatingLabel="normal" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="3sp"
        android:layout_marginRight="3sp"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/subscribe_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile"
            android:maxLines="1"
            android:textSize="12dp"
            android:layout_marginLeft="3dp"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="3sp"
        android:layout_marginRight="3sp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/subscribe_email"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:textSize="12dp"
            android:layout_marginLeft="3dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="3sp"
        android:layout_marginRight="3sp"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/subscribe_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="12dp"
            android:layout_marginLeft="3dp"
            android:inputType="textWebEditText"
            android:hint="Website"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3sp"
        android:layout_marginLeft="3sp"
        android:layout_marginRight="3sp"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/subscribe_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_marginLeft="3dp"
            android:maxLines="1"
            android:hint="Contact Person"/>
    </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5sp"
        android:background="@color/white"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3sp"
        android:layout_marginRight="3sp"

        android:textSize="15sp"
        android:layout_marginTop="3sp"
        android:textColor="@color/blue"
        android:text="Address Info"/>
    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/subscribe_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Country"
        android:textSize="12dp"

        android:layout_marginLeft="9sp"
        android:layout_marginRight="3sp"

        android:textColorHint="#05ab9a"
        app:met_floatingLabel="normal" />
    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/subscribe_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="State"

        android:layout_marginLeft="9sp"
        android:layout_marginRight="3sp"
        android:textSize="12dp"

        android:textColorHint="#05ab9a"
        app:met_floatingLabel="normal" />
    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/subscribe_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City"
        android:textSize="12dp"



        android:layout_marginLeft="9sp"
        android:layout_marginRight="3sp"
        android:textColorHint="#05ab9a"
        app:met_floatingLabel="normal" />
    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/subscribe_village"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Village"
        android:textSize="12dp"


        android:layout_marginLeft="9sp"
        android:layout_marginRight="3sp"

        android:textColorHint="#05ab9a"
        app:met_floatingLabel="normal" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/subscribe_zipcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"

            android:layout_marginLeft="3sp"
            android:layout_marginRight="3sp"
            android:textSize="12dp"

            android:hint="Zip Code"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="3sp"
        android:layout_marginRight="3sp"
        android:layout_marginBottom="3sp"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/subscribe_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_marginLeft="3dp"
            android:hint="Address"
            />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:elevation="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="General Info"
        android:layout_marginLeft="3sp"
        android:textSize="15sp"

        android:layout_marginRight="3sp"
        android:layout_marginTop="3sp"
        android:textColor="@color/blue"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="3sp"
        android:layout_marginRight="3sp"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/subscribe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_marginLeft="3dp"
            android:maxLines="1"
            android:hint="Title"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="3sp"
        android:layout_marginRight="3sp"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/subscribe_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_marginLeft="3dp"
            android:hint="Description"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="3sp"
        android:layout_marginRight="3sp"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/subscribe_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_marginLeft="3dp"
            android:hint="Tag"/>
    </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/btn_uploadimg"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:background="@drawable/button_style"
            android:layout_marginTop="5sp"

            android:layout_marginLeft="3sp"
            android:layout_marginRight="3sp"
            android:layout_marginBottom="5sp"
            android:text="Upload Image"
            android:textColor="@color/white"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/chage_pkg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pkg"

            android:layout_marginLeft="3sp"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:layout_marginRight="3sp"
            android:textColor="@color/green"
            android:layout_marginBottom="5sp"
            android:textSize="13sp" />
        </RelativeLayout>

</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected Package:"
        android:textColor="#4d87b6"
        android:layout_marginLeft="5sp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Free"
        android:textColor="#4d87b6"
        android:layout_marginLeft="5sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price: INR 0"
        android:textColor="#4d87b6"
        android:layout_marginLeft="5sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expirtion time(days): 30 Days"
        android:textColor="#4d87b6"
        android:layout_marginLeft="5sp"
        android:layout_marginBottom="10sp"
        />

</LinearLayout>
    </ScrollView>