<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
 android:background="#ffffff"
    android:scrollbars="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="5sp"
        android:layout_marginTop="5sp"
        android:background="@color/white"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp">
    <ImageView
        android:layout_marginTop="20sp"
       android:background="@drawable/splashlogo"
        android:layout_width="250sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="We'd love to get feedback from you . The more details you can provide, the better."
        android:layout_marginTop="10sp"
  android:layout_gravity="center"
        />
    <RatingBar
        android:id="@+id/reviewrate"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap on Star to Rate"
        android:layout_marginTop="10sp"
        android:id="@+id/rate_star"
        android:layout_marginBottom="5sp"
        android:layout_gravity="center"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/reviewratelinear"
   android:elevation="5sp"
android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            >

            <android.support.design.widget.TextInputEditText android:id="@+id/review_cmnt"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:inputType="textEmailAddress"
                android:textSize="12sp"
                android:hint="Comment" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp">
     <TextView
        android:text="Recent reviews"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="30sp"
        android:layout_marginLeft="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
</LinearLayout>
    </ScrollView>